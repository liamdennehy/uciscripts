
config options 'options'
	option serverport '5666'
	option pidfile '/var/run/nrpe.pid'
	option uid '50'
	option gid '50'
	option rundir '/var/run/nagios'
	option user 'nagios'
	option group 'nagios'
	option weakseed '0'
	option dont_blame_nrpe '0'
	option commandtimeout '60'
	option connectiontimeout '300'
	option debug '0'
	list allowedhosts '192.168.100.4'

config command
	option name 'check_users'
	option command '/usr/libexec/nagios/check_users'
	option parameters '-w 3 -c 5'

config command
	list name 'check_load'
	list command '/usr/libexec/nagios/check_load'
	list parameters '-w 7,4,2 -c 10,5,3'

config command
	list name 'check_tmp'
	list command '/usr/libexec/nagios/check_disk'
	list parameters '-w 50% -c 25% -p /tmp'

config command
	list name 'check_zombie_procs'
	list command '/usr/libexec/nagios/check_procs'
	list parameters '-w 1 -c 3 -s Z'

config command
	list name 'check_total_procs'
	list command '/usr/libexec/nagios/check_procs'
	option parameters '-w 100 -c 120'

config command
	option name 'check_disk'
	option command '/usr/libexec/nagios/check_disk'
	option parameters '-w 50% -c 25% -p /overlay'

config config 'config'
	option tmpconf '/tmp/etc/nrpe.cfg'

config command
	option name 'check_proc_ntpd'
	option command '/usr/libexec/nagios/check_procs'
	option parameters '-c 1: -C ntpd'

config command
	option name 'check_syslog_ng_process'
	option command '/usr/libexec/nagios/check_procs'
	option parameters '-c 1: -C syslog-ng'

config command
	option name 'check_proc_dnsmasq'
	option command '/usr/libexec/nagios/check_procs'
	option parameters '-c 1: -C dnsmasq'

config command
	option name 'check_openssl_version'
	option command '/usr/local/bin/check_openssl_version'

config command
	option name 'check_mem'
	option command '/usr/local/bin/check_mem'
	option parameters '-w 75 -c 90'

config command
	option name 'get_mem_total'
	option command '/usr/local/bin/check_mem'
	option parameters '-r Total'

config command
	option name 'get_mem_free'
	option command '/usr/local/bin/check_mem'
	option parameters '-r Free'

config command
	option name 'get_mem_used'
	option command '/usr/local/bin/check_mem'
	option parameters '-r Used'

config command
	option name 'get_mem_allcache'
	option command '/usr/local/bin/check_mem'
	option parameters '-r AllCache'

config command
	option name 'mrtg_mem'
	option command '/usr/local/bin/mrtg_mem'

config command
	option name 'mrtg_load'
	option command '/usr/local/bin/mrtg_load'

config command
	option name 'check_load5'
	option command '/usr/local/bin/check_load'
	option parameters '-w 100 -c 200 -i 5'

config command
	option name 'check_load15'
	option command '/usr/local/bin/check_load'
	option parameters '-w 100 -c 200 -i 15'

